@page "/"
@using RobotControl.Data;

<PageTitle>Index</PageTitle>

<h1>Hello, nworld!</h1>
<div class="steering">
<div class="btngrid">
        <button class="movebtn" @onclick='()=>RobotSteering.SetMoveSmooth("halfleft")' @onmouseup='()=>RobotSteering.MoveStop()' @ontouchend='()=>RobotSteering.MoveStop()' @ontouchstart='()=>RobotSteering.SetMoveSmooth("halfleft")'>Left '45 </button>
        <button class="movebtn" @onmousedown='()=>RobotSteering.SetMoveSmooth("forward")' @onmouseup='()=>RobotSteering.MoveStop()' @ontouchend='()=>RobotSteering.MoveStop()' @ontouchstart='()=>RobotSteering.SetMoveSmooth("forward")'>Forward</button>
        <button class="movebtn" @onmousedown='()=>RobotSteering.SetMoveSmooth("halfright")' @onmouseup='()=>RobotSteering.MoveStop()' @ontouchend='()=>RobotSteering.MoveStop()' @ontouchstart='()=>RobotSteering.SetMoveSmooth("halfright")'>Right '45</button>
        <button class="movebtn" @onmousedown='()=>RobotSteering.SetMoveSmooth("left")' @onmouseup='()=>RobotSteering.MoveStop()' @ontouchend='()=>RobotSteering.MoveStop()' @ontouchstart='()=>RobotSteering.SetMoveSmooth("left")'>Left</button>
        <button class="movebtn" @onmousedown='()=>RobotSteering.SetMoveSmooth("stop")' @onmouseup='()=>RobotSteering.MoveStop()' @ontouchend='()=>RobotSteering.MoveStop()' @ontouchstart='()=>RobotSteering.MoveStop()'>Stop</button>
        <button class="movebtn" @onmousedown='()=>RobotSteering.SetMoveSmooth("right")' @onmouseup='()=>RobotSteering.MoveStop()' @ontouchend='()=>RobotSteering.MoveStop()' @ontouchstart='()=>RobotSteering.SetMoveSmooth("right")'>Right</button>
        <button class="movebtn" @onmousedown='()=>RobotSteering.SetMoveSmooth("backward")' @onmouseup='()=>RobotSteering.MoveStop()' @ontouchend='()=>RobotSteering.MoveStop()' @ontouchstart='()=>RobotSteering.SetMoveSmooth("backward")'>Backward</button>
</div>
</div>



